<?xml version="1.0" encoding="UTF-8"?>
<svg width="512" height="512" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg">
  <!-- Fondo con gradiente -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2c3e50;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#34495e;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <rect width="512" height="512" fill="url(#bgGradient)" rx="64"/>
  
  <!-- Grid del mapa (fondo decorativo) -->
  <g opacity="0.15">
    <line x1="100" y1="150" x2="412" y2="150" stroke="#3498db" stroke-width="6"/>
    <line x1="100" y1="220" x2="412" y2="220" stroke="#3498db" stroke-width="6"/>
    <line x1="100" y1="290" x2="412" y2="290" stroke="#e74c3c" stroke-width="8"/>
    <line x1="100" y1="360" x2="412" y2="360" stroke="#3498db" stroke-width="6"/>
    <line x1="150" y1="100" x2="150" y2="420" stroke="#3498db" stroke-width="5"/>
    <line x1="250" y1="100" x2="250" y2="420" stroke="#e74c3c" stroke-width="7"/>
    <line x1="362" y1="100" x2="362" y2="420" stroke="#3498db" stroke-width="5"/>
  </g>
  
  <!-- Mapa Pin Principal -->
  <g transform="translate(256, 256)">
    <!-- Sombra del pin -->
    <ellipse cx="0" cy="120" rx="50" ry="15" fill="#000000" opacity="0.3"/>
    
    <!-- Pin -->
    <path d="M0,-120 C-50,-120 -90,-80 -90,-30 C-90,10 0,120 0,120 C0,120 90,10 90,-30 C90,-80 50,-120 0,-120 Z" 
          fill="#e74c3c" 
          stroke="#ffffff" 
          stroke-width="8"/>
    
    <!-- Brillo en el pin -->
    <ellipse cx="-20" cy="-60" rx="25" ry="35" fill="#ffffff" opacity="0.3"/>
    
    <!-- Círculo interior del pin -->
    <circle cx="0" cy="-30" r="30" fill="#ffffff"/>
    <circle cx="0" cy="-30" r="20" fill="#2c3e50"/>
  </g>
  
  <!-- Texto -->
  <text x="256" y="460" font-family="Arial, sans-serif" font-size="48" font-weight="bold" 
        fill="#ffffff" text-anchor="middle">PUERRES</text>
  <text x="256" y="490" font-family="Arial, sans-serif" font-size="24" 
        fill="#ecf0f1" text-anchor="middle" opacity="0.8">Nariño, Colombia</text>
</svg>


